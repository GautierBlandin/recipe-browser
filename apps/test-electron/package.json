{
  "name": "@recipe-browser/test-electron",
  "version": "0.0.1",
  "main": "main.ts",
  "private": true,
  "nx": {
    "root": "apps/test-electron",
    "targets": {
      "build": {
        "command": "node ./build.cjs",
        "options": {
          "cwd": "{projectRoot}"
        },
        "dependsOn": [
          "^build"
        ]
      },
      "serve": {
        "command": "npx electron ./build",
        "options": {
          "cwd": "{projectRoot}"
        },
        "dependsOn": [
          "build"
        ]
      }
    }
  }
}
