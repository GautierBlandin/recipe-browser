{
  "name": "electron",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "root": "apps/electron",
  "projectRoot": "apps/electron",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "mkdir -p apps/electron/output"
        ],
        "parallel": false
      },
      "dependsOn": [
        "desktop:build"
      ]
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd apps/electron && electron ."
      },
      "dependsOn": [
        "build"
      ]
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd apps/electron && node build-scripts/watch.js"
      },
      "dependsOn": [
        "build"
      ]
    },
    "package": {
      "executor": "nx:run-commands",
      "options": {
        "command": "electron-builder --dir",
        "cwd": "apps/electron"
      },
      "dependsOn": [
        "build"
      ]
    }
  },
  "tags": []
}
