{
  "name": "electron",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "root": "apps/electron",
  "projectRoot": "apps/electron",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "mkdir -p ./build/webapp",
          "cp -R ../desktop/dist/* ./build/webapp/",
          "cp ./main.js ./build/",
          "cp ./preload.js ./build/",
          "cp ./package.json ./build/"
        ],
        "cwd": "{projectRoot}",
        "parallel": false
      },
      "dependsOn": [
        "desktop:build"
      ]
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx electron ./build",
        "cwd": "{projectRoot}"
      },
      "dependsOn": [
        "build"
      ]
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node build-scripts/watch.js",
        "cwd": "{projectRoot}"
      },
      "dependsOn": [
        "build"
      ]
    },
    "package": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx electron-builder --dir",
        "cwd": "apps/electron"
      },
      "dependsOn": [
        "build"
      ]
    }
  },
  "tags": []
}
