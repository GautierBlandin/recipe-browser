{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "module": "node16",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "target": "es2022",
    "lib": ["es2022", "dom"],
    "types": ["node", "electron"],
    "rootDir": "src",
    "sourceMap": true,
    "skipLibCheck": true,
    "emitDeclarationOnly": true,
    "declaration": true
  },
  "exclude": [
    "out-tsc",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts",
    "vite.config.ts",
    "vite.config.mts",
    "build-scripts/**/*"
  ],
  "include": ["src/**/*.ts"]
}
