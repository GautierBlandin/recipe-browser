{
  "name": "desktop-app",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/desktop/app/src",
  "projectRoot": "apps/desktop/app",
  "implicitDependencies": ["electron", "desktop"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "node src/build.js"
      },
      "dependsOn": ["^build"]
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "NODE_ENV=development npx electron ./dist",
        "cwd": "{projectRoot}"
      },
      "dependsOn": ["build"]
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx electron ./dist",
        "cwd": "{projectRoot}"
      },
      "dependsOn": ["build"]
    },
    "package": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx electron-builder --dir",
        "cwd": "{projectRoot}"
      },
      "dependsOn": ["build"]
    }
  },
  "tags": []
}
